\documentclass[12pt]{article}

% set margins on page
\usepackage{geometry}
\geometry{a4paper,
	lmargin=2.5cm,
	rmargin=2.5cm,
	tmargin=2.5cm,
	bmargin=3.0cm}

% formatting
\setlength{\parskip}{0.75em}
\setlength{\parindent}{0em}
\usepackage{enumitem}
\setlist{nolistsep}
\setlength\tabcolsep{1pt}
