\documentclass[12pt]{article}

% page dimensions
\usepackage{geometry}
\geometry{a4paper,
		  lmargin=2.5cm,
		  rmargin=2.5cm,
		  tmargin=2.5cm,
		  bmargin=3.0cm}

% paragraph formatting
\setlength{\parskip}{0.75em}
\setlength{\parindent}{0em}

% remove margin on lists
\usepackage{enumitem}
\setlist{nolistsep}

% improve text rendering
\usepackage[T1]{fontenc}
\usepackage{lmodern}
\usepackage{mathtools}

% utilities
\usepackage[hidelinks]{hyperref}
\usepackage{pdfpages}
\usepackage{graphicx}
\usepackage{xcolor}

